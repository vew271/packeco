                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/dummyPackageprice"
                                    android:textStyle="bold"/>
                                <RatingBar
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:numStars="5"
                                    android:rating="3.5"
                                    style="?android:attr/ratingBarStyleSmall"/>
                            </LinearLayout>

